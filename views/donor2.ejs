        background-size: cover;
        position: relative;
        scroll-behavior: smooth;
      }
      nav {
        display: flex;
        padding: 2% 6%;
        justify-content: space-between;
        align-items: center;
      }

      nav img {
        position: relative;
    top: -22px;
    left: -76px;
    width: 65px;
    width: 11%;
      }
      .nav-links {
        flex: 1;
        text-align: right;
        position: relative;
        top: -36px;
        right: 40px;
      }

      .nav-links ul li {
        list-style: none;
        display: inline-block;
        padding: 8px 12px;
        position: relative;
      }
      .nav-links ul li a {
        color: white;
        text-decoration: none;
        font-size: 13px;
      }
      /* .header a{
            position: relative;
            height: 20px;
            width: 25%;
        } */

      .nav-links ul li::after {
        content: "";
        width: 0;
        height: 2px;
        background: #f44336;
        display: block;
        margin: auto;
        transition: 1s;
      }

      
      .nav-links ul li:hover:after {
        width: 100%;
        transition: 0.5s;
      }

      .log {
        position: relative;
        float: right;
        top: -648px;
        right: 23px;
        width: 91px;
        height: 31px;
        border-radius: 20px;
      }

      .log:hover {
        border: 1px solid #f44336;
        background: #f44336;
        transition: 0.5s;
      }
      .map{
        position: absolute;
    top: 81px;
    padding: 72px 190px;
    width: 74%;
      }
      .dono{
        position: absolute;
    top: 51px;
    height: 50px;
    left: 24%;
    color: white;
      }
      .else{
        position: absolute;
    height: 40px;
    top: 19%;
    left: 15%;
    color: white;
      }
    

